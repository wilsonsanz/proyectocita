<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/lightBackground"
    android:gravity="center_vertical">

    <!-- Título de la pantalla -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona una cita para cancelar"
        android:textSize="20sp"
        android:textColor="#4905D9"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif-medium" />

    <!-- RecyclerView con bordes y sombra -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCancelarCitas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="20dp"
        android:background="@drawable/item_selected_background"
        android:elevation="4dp"/>

    <!-- Botón para cancelar la cita -->
    <Button
        android:id="@+id/btnCancelarCita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eliminar cita seleccionada"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:padding="14dp"
        android:textSize="16sp"
        android:layout_gravity="center"
        style="@style/colorbutton" />

</LinearLayout>
