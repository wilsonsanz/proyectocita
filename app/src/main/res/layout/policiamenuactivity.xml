<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="90dp"
    android:background="@drawable/fondo_menu2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:weightSum="1">

        <!-- Espacio vacío para empujar los botones hacia abajo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"/>

        <!-- Primer botón centrado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnMediGene"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medicina General"
                android:layout_marginTop="16dp"
                android:padding="14dp"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                style="@style/colorbutton"/>
        </LinearLayout>

        <!-- Segundo botón centrado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnOdonto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Odontologia"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="16dp"
                android:padding="14dp"
                android:textSize="16sp"
                android:layout_gravity="center"
                style="@style/colorbutton"/>
        </LinearLayout>

        <!-- Tercer botón centrado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnPsicologia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Psicologia"
                android:layout_marginTop="16dp"
                android:padding="14dp"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                style="@style/colorbutton"/>
        </LinearLayout>

        <!-- Cuarto botón centrado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnGinec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ginecologia"
                android:layout_marginEnd="8dp"
                style="@style/colorbutton"/>
        </LinearLayout>

        <!-- Quinto botón centrado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnMedicFam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medicina Familiar"
                android:layout_marginEnd="8dp"
                style="@style/colorbutton"/>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>


