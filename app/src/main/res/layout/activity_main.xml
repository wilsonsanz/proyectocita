<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/fondo"> <!-- Agregamos la imagen de fondo -->

    <TextView
        android:id="@+id/tvMessage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Su usuario es su nombre. Su clave es su cédula."
        android:textColor="@android:color/black"
        android:paddingTop="16dp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Usuario"
        android:gravity="center"
        android:background="@android:color/white"/> <!-- Fondo blanco para mejor visibilidad -->

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contraseña"
        android:gravity="center"
        android:inputType="textPassword"
        android:background="@color/lightBackground"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar Sesión"
        style="@style/colorbutton" />

    <TextView
        android:id="@+id/tvCreatePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear contraseña"
        android:textColor="@android:color/holo_blue_light"
        android:paddingTop="16dp" />
    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Su usuario es su nombre. Su clave es su cédula."
        android:textColor="@android:color/black"
        android:paddingTop="16dp"
        android:textStyle="bold"/>

</LinearLayout>
