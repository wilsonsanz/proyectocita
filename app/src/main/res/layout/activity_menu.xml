<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/fondo_menu">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bienvenido a la aplicación"
        android:textSize="24sp"
        android:gravity="center"
        android:padding="16dp" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="Imagen del menú principal"
        android:src="@drawable/logo_iess" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btncita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agendar cita Medica"
            style="@style/colorbutton"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btncitaprogramadas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver sus citas programadas"
            style="@style/colorbutton"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btnCancelarCita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar cita medica"
            style="@style/colorbutton"
            />
    </LinearLayout>

    </LinearLayout>